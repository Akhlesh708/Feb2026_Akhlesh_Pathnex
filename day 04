Day 04 - Basic CI/CD Concept With jenkins & Gitlab


.Jenkinsfile- Basic CI Pipeline
Pipeline {
     agent any
    stages {
      stage('Build') {
         steps {
           echo 'Building project'
         }
      }
     stage('Test') {
        Steps {
          echo  'Running Tests'
         }
      }
     Stage ('Deploy') {
           Steps {
               echo 'Deploying application'
             }
          }
       }
    }


   .Gitlab CI/CD - Basic pipeline
Stages:
  -build
  -test
  -deploy

build:
  stages: build
  Script:
     -echo'building project'

  test:
    stages:test
    script:
       -echo"Running test"

deploy:
  stages:deploy
  script:
     -echo "Deploying application"


 .Ansible-Install And Configure Nginx
-name: Install And Configure Nginx
 hosts:all
 become:yes
 tasks:
  -name-Install Nginx
   Yum:
     name: nginx
     state:present
  -name: Configure nginx
   template:
      src:ndinx conf.j2
      dest:/ect/nginx/nginx.conf
  -name: start nginx service
   service:
  name: nginx
  state: Started
  enabled: yes


  .Terraform- EC2 With Security Group
resource "aws_security_group" 'example"{
   name       = "examle_Security_group"
   description = "Allow SSH and HTTP"
   ingress {
     form_port  = 22
     to_port    = 22
    -protocol   = "tcp"
     cidr_blockd =["0.0.0.0/.0"]
   }

  ingress {
    form_port =  80
    to_port   =  80
  -protocol   = "tcp"
   cidr_blocks = ["0.0.0.0/0"]
}

 egress {
   form_port = 0
   to_port   = 0
  -protocol  = ["-1']
   cidr-blocks= ["0.0.0.0/0"]
 }
}
